{
  "name": "crosbies-n8n",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "install:service": "bun px install-service",
    "lint": "oxlint --type-aware",
    "px": "pixi run",
    "start": "bash -c 'serve-n8n.sh'",
    "start:logs": "bash -c 'serve-n8n.sh logs'",
    "start:monitor": "bash -c 'serve-n8n.sh monitor'",
    "stop": "bash -c 'serve-n8n.sh stop'",
    "upgrade": "bun update n8n"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "semi": false,
    "tabWidth": 4,
    "overrides": [
      {
        "files": [
          "*.json"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "dependencies": {
    "n8n": "^1.111.0"
  },
  "devDependencies": {
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19"
  }
}
