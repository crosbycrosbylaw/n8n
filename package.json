{
    "name": "crosbies-n8n",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "gcp": "git commit --all -m 'latest changes' && git push",
        "lint": "oxlint --type-aware",
        "px": "pixi run",
        "server": "bun --filter=./server run",
        "upgrade": "bun update n8n"
    },
    "prettier": {
        "arrowParens": "avoid",
        "experimentalOperatorPosition": "start",
        "experimentalTernaries": true,
        "objectWrap": "collapse",
        "plugins": [
            "prettier-plugin-packagejson"
        ],
        "printWidth": 108,
        "proseWrap": "never",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "overrides": []
    },
    "dependencies": {
        "n8n-serve": "link:n8n-serve"
    },
    "devDependencies": {
        "@types/bun": "^1.2.23",
        "oxlint": "1.19.0",
        "oxlint-tsgolint": "^0.2.0",
        "prettier": "3.6.2",
        "prettier-plugin-packagejson": "2.5.19"
    }
}
