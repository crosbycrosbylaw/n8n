{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "module": "preserve",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.js",
    "**/*.mjs"
  ]
}